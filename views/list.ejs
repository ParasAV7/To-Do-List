<%- include("header.ejs") -%>

    <body>
        <div class="body" id="heading">

            <h1>
                <%= topic %>
                    <%= newDay %>
            </h1>
        </div>

        <div class="box">

            <% for (var i=0 ; i<newItems.length;i++) { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox"value="<%= newItems[i]._id %>" <% if (newItems[i].checked) { %> checked <% } %> >
                        <p >
                            <%= newItems[i].Name %>
                        </p>
                        <button class="noselect" type="submit" name="delete" value="<%= newItems[i]._id %>" id="btn"><span
                                class="text">Delete</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg"
                                    width="15" height="20" viewBox="0 0 24 24">
                                    <path
                                        d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z">
                                    </path>
                                </svg></span></button>

                        </button>

                    </div>
                </form>
                <% } %>
                    <form action="/insert" method="post" class="item">
                        <input type="text" name="task" placeholder="Add more task" autocomplete="off">
                        <button type="submit" id="btnItem" name="btn_add" value="<%= topic %>">+</button>
                    </form>
        </div>
    </body>
    <%- include("footer.ejs") -%>

        </html>